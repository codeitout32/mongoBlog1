<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>

</div>
<ul class="admin-posts">
    <% data.forEach(post => { %>
        
        <li>
            <a href="/post/<%= post._id %>"><%= post.title %> &nearr;
            
            </a>
            <div class="admin-post-controls">
                <a class="btn" href="/edit-post/<%= post.id %>">Edit</a>
                <form action="/delete-post/<%= post.id %>?_method=DELETE" method="post">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </div>
        </li>
   <%  }); %>
</ul>

